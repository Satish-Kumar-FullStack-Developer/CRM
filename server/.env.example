# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/crm-system
MONGODB_USER=crm_user
MONGODB_PASSWORD=secure_password_here

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this
JWT_EXPIRY=7d

# Frontend URL (for password reset links)
FRONTEND_URL=http://localhost:3000

# Email Configuration (Gmail or other SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=noreply@crmsystem.com
SMTP_FROM_NAME=CRM System

# SendGrid Configuration (Alternative to SMTP)
SENDGRID_API_KEY=your_sendgrid_api_key

# Security
BCRYPT_ROUNDS=10
ENCRYPTION_KEY=your_encryption_key_32_chars_long

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info

# AWS S3 (for file storage - optional)
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_S3_BUCKET=crm-system-bucket
AWS_REGION=us-east-1
